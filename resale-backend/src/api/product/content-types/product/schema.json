{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "price": {
      "type": "integer"
    },
    "description": {
      "type": "richtext"
    },
    "discount_price": {
      "type": "integer"
    },
    "stock_quantity": {
      "type": "integer"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "product_status": {
      "type": "enumeration",
      "enum": [
        "active",
        "inactive",
        "draft"
      ]
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "mappedBy": "products"
    },
    "category_products": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category-product.category-product",
      "mappedBy": "product"
    },
    "shortDescription": {
      "type": "string"
    },
    "SEO": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": true
    },
    "SKU": {
      "type": "string",
      "unique": true
    }
  }
}
